<div class="navbar">
	<div class="col-lg-11">
		<div class="navbar-brand">virtu i/o</div>
  </div>
  <div class="col-lg-1">
  	<a class="pull-right" href="/login">Login</a>
  </div>
</div>
<div class="col-lg-12">
	<div class="col-lg-6">
		<div class="hero-unit"></div>
	</div>
	<p id="notice"><%= notice %></p>
	<div class="col-lg-6 well-style form-horizontal well">
    <fieldset class="fieldset-style">
      <legend class="legend-style">Simply sign up.</legend>
      <p>Getting paid has never been this easy.</p>
      <%= form_for @user, :url => {:controller => "sessions", :action => "create", :method => "post"} do |f| %>
      	<% if @user.errors.any? %>
			    <div class="error_messages">
			      <h2>Form is invalid</h2>
			      <ul>
			        <% for message in @user.errors.full_messages %>
			          <li><%= message %></li>
			        <% end %>
			      </ul>
			    </div>
			  <% end %>
			  <div class="col-lg-12">
	        <div class="form-group form-group-style">
			    	<%= f.text_field :email, :placeholder => "Enter Email" %>          
	        </div>
	        <div class="form-group">
	          <%= f.password_field :password, :placeholder => "Password" %>
	        </div>
	        <div class="form-group">
	          <%= f.password_field :password_confirmation, :placeholder => "Confirm Password"  %>
	        </div>
	        <div class="actions">
	          <%= f.submit 'Sign Up', :class => "btn btn-primary" %>
	        </div>
        </div>
      <% end %>
    </fieldset>
	</div>
</div>

