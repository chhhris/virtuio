<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1><%= @user.name %></h1>
      <div class="col-lg-4">
        <b>Email:</b>
        <%= @user.email %>
      </div>
      <div class="col-lg-4">
        <b>Website:</b>
        <%= @user.website %>
      </div>
  </div>
</div>

<% unless @user.clients.nil? %>
<div class="row">
  <div class="col-lg-12">
    <h2>Clients</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <th>Client Name</th>
        <th>Amount</th>
        <th>Paid</th>
        <th>Status</th>
      </tr>
      <% @user.clients.each do |client| %>
       <tr>
        <td><%= client.name %></td>
        <td><%= number_to_currency(client.billing) %></td>    
        <td><%= client.paid ? 'Yes' : 'No' %></td>
        <td>
          <% if client.paid? == false %>
            <%= link_to "Send Invoice", client_path(client) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<% end %>

<%= link_to 'Add a Client', new_user_clients_path(@user) %> | 
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
