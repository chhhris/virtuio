<div class="col-lg-12">
  <form class="form-horizontal">
    <fieldset>
      <legend>Add a client:</legend>
      <%= form_for @client do |f| %>
        <div class="form-group">
          <label class="col-lg-2 control-label">
            <%= f.label :client %>
          </label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">
            <%= f.label :amount %>
          </label>
          <%= f.text_field :billing %>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <div class="checkbox">
              <label>
                <%= f.label 'Invoice Paid?' %>
                <%= f.check_box :paid %>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="actions col-lg-offset-2 col-lg-10">
            <%= f.submit 'Add Client', :class => "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </fieldset>
  </form>
</div>