<% unless @user.clients.nil? %>
<div class="row">
  <div class="col-lg-12">
    <h2>Clients</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <th>Client Name</th>
        <th>Amount</th>
        <th>Paid</th>
        <th>Status</th>
      </tr>
      <% @user.clients.each do |client| %>
       <tr>
        <td><%= client.name %></td>
        <td><%= number_to_currency(client.billing) %></td>    
        <td><%= client.paid ? 'Yes' : 'No' %></td>
        <td>
          <% if client.paid? == false %>
            <%= link_to "Send Invoice", client_path(client) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<% end %>